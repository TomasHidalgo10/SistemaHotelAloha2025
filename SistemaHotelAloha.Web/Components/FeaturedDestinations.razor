<div class="featured">
  <h3>Destinos destacados</h3>
  <div class="featured-grid">
    @foreach (var d in data)
    {
      <a class="feature-card" href="@($"/hoteles?destino={Uri.EscapeDataString(d.Nombre)}")">
        <img src="@d.Img" loading="lazy" alt="@d.Nombre" />
        <div class="overlay">
          <span>@d.Nombre</span>
        </div>
      </a>
    }
  </div>
</div>

