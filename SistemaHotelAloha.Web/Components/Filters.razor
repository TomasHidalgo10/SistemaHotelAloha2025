<div class="filters card">
    <h4>Filtros</h4>
    <label><input type="checkbox" @bind="wifi" /> Wi‑Fi</label>
    <label><input type="checkbox" @bind="desayuno" /> Desayuno</label>
    <label><input type="checkbox" @bind="pileta" /> Pileta</label>
    <label>Precio mín <input type="number" @bind="min" /></label>
    <label>Precio máx <input type="number" @bind="max" /></label>
    <select @bind="orden">
        <option value="">Ordenar</option>
        <option value="precio">Precio</option>
        <option value="calificacion">Calificación</option>
    </select>
    <button @onclick="Aplicar">Aplicar</button>
</div>

@code {
    // Inicializados = sin CS0649
    private bool wifi = false, desayuno = false, pileta = false;
    private decimal? min = null, max = null;
    private string? orden = null;

    [Parameter] public EventCallback<(string[]? amen, decimal? min, decimal? max, string? orden)> OnChange { get; set; }

    private async Task Aplicar()
    {
        var amen = new List<string>();
        if (wifi) amen.Add("WiFi");
        if (desayuno) amen.Add("Desayuno");
        if (pileta) amen.Add("Pileta");
        await OnChange.InvokeAsync((amen.ToArray(), min, max, orden));
    }
}