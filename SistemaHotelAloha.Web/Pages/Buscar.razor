@page "/buscar"
@using System.ComponentModel.DataAnnotations

<h3>Buscar</h3>

<EditForm Model="@vm" OnValidSubmit="@OnBuscarAsync">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label class="form-label">Destino</label>
        <InputText class="form-control" @bind-Value="vm.Destino" />
    </div>

    <div class="mb-3">
        <label class="form-label">Fecha desde</label>
        <InputDate DateFormat="dd/MM/yyyy" class="form-control" @bind-Value="vm.Desde" />
    </div>

    <div class="mb-3">
        <label class="form-label">Fecha hasta</label>
        <InputDate DateFormat="dd/MM/yyyy" class="form-control" @bind-Value="vm.Hasta" />
    </div>

    <button class="btn btn-primary" type="submit">Buscar</button>
</EditForm>

@if (resultados?.Any() == true)
{
    <hr />
    <h5>Resultados</h5>
    <ul>
        @foreach (var r in resultados)
        {
            <li>@r</li>
        }
    </ul>
}

@code {
    private BuscarVm vm = new();
    private List<string>? resultados;

    private Task OnBuscarAsync()
    {
        // demo: simulamos resultados
        resultados = new List<string> { $"Destino: {vm.Destino}", $"Desde: {vm.Desde:dd/MM/yyyy}", $"Hasta: {vm.Hasta:dd/MM/yyyy}" };
        StateHasChanged();
        return Task.CompletedTask;
    }

    public class BuscarVm
    {
        [Required] public string? Destino { get; set; }
        [Required] public DateTime? Desde { get; set; }
        [Required] public DateTime? Hasta { get; set; }
    }
}
