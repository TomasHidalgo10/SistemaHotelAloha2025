@page "/destino/{Destino?}"
@inject SistemaHotelAloha.AccesoDatos.ReservasAdoRepository Repo
@inject NavigationManager Nav
@inject AuthenticationStateProvider Auth
@inject IJSRuntime JS

<h2 class="mb-3">Destino: @(!string.IsNullOrWhiteSpace(Destino) ? Destino : "Todos")</h2>

@if (_cargando)
{
    <div class="text-center py-4"><div class="spinner-border"></div></div>
}
else if (!string.IsNullOrEmpty(_error))
{
    <div class="alert alert-warning">@_error</div>
}
else if (_habitaciones is null || _habitaciones.Count == 0)
{
    <div class="alert alert-info">No hay habitaciones para este destino.</div>
}
else
{
    <div class="row row-cols-1 row-cols-md-3 g-3">
        @foreach (var h in _habitaciones)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    @if (!string.IsNullOrWhiteSpace(h.Foto))
                    {
                        <img src="@h.Foto" class="card-img-top" style="height:180px;object-fit:cover"
                             onerror="this.style.display='none'">
                    }
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@h.Nombre</h5>
                        <p class="text-muted mb-2">@h.Tipo</p>
                        <p class="mb-3"><strong>Precio/noche:</strong> @h.Precio.ToString("C")</p>
                        <button class="btn btn-primary mt-auto" @onclick="() => AbrirReserva(h.Id)">Reservar</button>
                    </div>
                </div>
            </div>
        }
    </div>
}

@if (_mostrarReserva)
{
    <div class="modal fade show d-block" style="background:rgba(0,0,0,.5);" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Reservar habitación</h5>
                    <button type="button" class="btn-close" @onclick="CerrarReserva"></button>
                </div>
                <div class="modal-body">
                    <label class="form-label">Desde</label>
                    <input type="date" class="form-control mb-2" @bind="_desde" />
                    <label class="form-label">Hasta</label>
                    <input type="date" class="form-control mb-3" @bind="_hasta" />
                    <button class="btn btn-success w-100" @onclick="ConfirmarReserva" disabled="@_reservando">
                        @if (_reservando)
                        {
                            <span class="spinner-border spinner-border-sm me-1"></span>
                        }
                        Confirmar reserva
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public string? Destino { get; set; }

    private bool _cargando;
    private string? _error;

    private List<SistemaHotelAloha.AccesoDatos.ReservasAdoRepository.HabitacionDto>? _habitaciones;

    private bool _mostrarReserva;
    private bool _reservando;
    private int _habitacionSeleccionada;
    private DateTime _desde = DateTime.Today;
    private DateTime _hasta = DateTime.Today.AddDays(1);

    protected override async Task OnParametersSetAsync()
    {
        _cargando = true;
        _error = null;
        try
        {
            // Repo espera string => usamos el parámetro Destino (nombre del tipo) o vacío
            _habitaciones = await Repo.ListarHabitacionesPorDestino(Destino ?? string.Empty);
        }
        catch (Exception ex)
        {
            _error = "Error al cargar: " + ex.Message;
        }
        finally
        {
            _cargando = false;
        }
    }

    private void AbrirReserva(int idHabitacion)
    {
        _habitacionSeleccionada = idHabitacion;
        _mostrarReserva = true;
    }

    private void CerrarReserva()
    {
        _mostrarReserva = false;
        _reservando = false;
    }

    private async Task ConfirmarReserva()
    {
        if (_reservando) return;
        _reservando = true;

        try
        {
            if (_hasta <= _desde)
                throw new Exception("La fecha hasta debe ser mayor a la fecha desde.");

            // Verificamos login
            var state = await Auth.GetAuthenticationStateAsync();
            var user = state.User;
            if (!(user.Identity?.IsAuthenticated ?? false))
            {
                var returnUrl = Nav.Uri;
                Nav.NavigateTo($"/login?returnUrl={Uri.EscapeDataString(returnUrl)}");
                return;
            }

            // Validamos disponibilidad
            var ok = await Repo.HabitacionDisponibleAsync(_habitacionSeleccionada, _desde, _hasta);
            if (!ok) throw new Exception("La habitación no está disponible para ese rango.");

            // Id de usuario actual
            var idStr = user.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
            if (string.IsNullOrWhiteSpace(idStr) || !int.TryParse(idStr, out var idUsuario))
                throw new Exception("No se pudo determinar el usuario.");

            // Cliente vinculado (si no existe lo crea)
            var idCliente = await Repo.AsegurarClienteParaUsuarioAsync(idUsuario);

            // Crear reserva y redirigir (si tenés PDF)
            var idReserva = await Repo.CrearReserva(idUsuario, idCliente, _habitacionSeleccionada, _desde, _hasta);
            await JS.InvokeVoidAsync("alert", $"Reserva creada con éxito. Id: {idReserva}");
            // Nav.NavigateTo($"/pdf/reserva/{idReserva}", forceLoad: true);
        }
        catch (Exception ex)
        {
            await JS.InvokeVoidAsync("alert", "Error al reservar: " + ex.Message);
        }
        finally
        {
            _reservando = false;
            _mostrarReserva = false;
        }
    }
}
