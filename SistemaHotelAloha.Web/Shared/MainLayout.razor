@inherits LayoutComponentBase
@inject AuthenticationStateProvider AuthState

<div class="container-fluid p-0">
    <header class="navbar navbar-expand-lg navbar-dark bg-dark px-3">
        <a class="navbar-brand fw-bold" href="/">ALOHA</a>
        <nav class="navbar-nav flex-row gap-3">
            <a class="nav-link" href="/">Home</a>
            <a class="nav-link" href="/buscar">Buscar</a>

            <AuthorizeView>
                <Authorized>
                    <a class="nav-link" href="/reservas">Mis reservas</a>
                    <a class="nav-link" href="/auth/logout">Salir</a>
                    <span class="navbar-text ms-2">
                        Hola, @context.User.Identity?.Name
                    </span>
                </Authorized>
                <NotAuthorized>
                    <a class="nav-link" href="/auth/login">Login</a>
                    <a class="nav-link" href="/auth/register">Registrarse</a>
                </NotAuthorized>
            </AuthorizeView>
        </nav>
    </header>

    <main class="container py-4">
        @Body
    </main>
</div>