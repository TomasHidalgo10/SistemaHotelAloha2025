@inherits LayoutComponentBase

<header class="navbar navbar-expand-lg navbar-dark bg-dark px-3">
    <NavLink class="navbar-brand fw-bold" href="/">ALOHA</NavLink>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#alohaNav">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="alohaNav">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item"><NavLink class="nav-link" href="/">Home</NavLink></li>
            <li class="nav-item"><NavLink class="nav-link" href="/buscar">Buscar</NavLink></li>
            <li class="nav-item"><NavLink class="nav-link" href="/habitaciones">Habitaciones</NavLink></li>
            <AuthorizeView>
                <Authorized>
                    <li class="nav-item"><NavLink class="nav-link" href="/reservas">Mis reservas</NavLink></li>
                </Authorized>
            </AuthorizeView>
        </ul>

        <ul class="navbar-nav ms-auto">
            <AuthorizeView>
                <Authorized>
                    <li class="nav-item"><span class="navbar-text me-2">Hola, @context.User.Identity?.Name</span></li>
                    <li class="nav-item"><NavLink class="nav-link" href="/auth/logout">Salir</NavLink></li>
                </Authorized>
                <NotAuthorized>
                    <li class="nav-item"><NavLink class="nav-link" href="/auth/login">Login</NavLink></li>
                    <li class="nav-item"><NavLink class="nav-link" href="/auth/register">Registrarse</NavLink></li>
                </NotAuthorized>
            </AuthorizeView>
        </ul>
    </div>
</header>

<main class="container py-4">
    @Body
</main>
