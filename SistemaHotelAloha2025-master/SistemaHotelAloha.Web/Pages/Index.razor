@page "/"
@inject NavigationManager Nav

<div class="position-relative overflow-hidden rounded-3 shadow" style="min-height: 62vh;">
    <img src="/img/Home/fondo.png"
         class="w-100 h-100 object-fit-cover"
         alt="Hotel Aloha"
         onerror="this.src='/img/Habitaciones/standart.jpg'" />

    <div class="position-absolute top-0 start-0 w-100 h-100"
         style="background: linear-gradient(180deg, rgba(0,0,0,.35), rgba(0,0,0,.65));"></div>

    <div class="position-absolute top-50 start-50 translate-middle text-center text-white px-3">
        <h1 class="display-3 fw-bold mb-2">Hotel Aloha</h1>
        <p class="lead mb-4">El mejor lugar para tus vacaciones</p>
        <button class="btn btn-primary btn-lg" @onclick="GoHabitaciones">Reservar ahora</button>
    </div>
</div>

@code {
    private void GoHabitaciones()
    {
        Nav.NavigateTo("/habitaciones");
    }
}
